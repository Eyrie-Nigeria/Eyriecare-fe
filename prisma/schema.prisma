generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"   // or your preferred output
}

datasource db {
  provider = "sqlite"   // or "postgresql" / "mysql" depending on your DB
  // Notice: **no `url = ...` here anymore**
}

model WaitlistEntry {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  role          String
  createdAt     DateTime @default(now())
  grantedAccess Boolean  @default(false)
  grantedAt     DateTime?
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  role      String
  password  String
  createdAt DateTime @default(now())
  grantedAt DateTime
  lastLogin DateTime?
}
